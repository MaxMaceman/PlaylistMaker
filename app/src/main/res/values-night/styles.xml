<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainPageStyle">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="MainPageToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="titleMarginStart">@dimen/upHorizontal_padding</item>
        <item name="titleMarginTop">14dp</item>
        <item name="titleMarginBottom">@dimen/upHorizontal_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="titleTextColor">@color/white</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">@dimen/main_fontSize</item>
    </style>

    <style name="MainPageView">
        <item name="theme">@style/Base.Theme.PlaylistMaker</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainPageButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:layout_marginHorizontal">@dimen/upHorizontal_padding</item>
        <item name="android:layout_marginBottom">@dimen/upHorizontal_padding</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/pm_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/pm_black</item>
        <item name="android:textSize">@dimen/main_fontSize</item>
        <item name="cornerRadius">@dimen/mainPageButton_radius</item>
    </style>

    <style name="SettingsPageToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/upHorizontal_padding</item>
        <item name="android:paddingBottom">@dimen/toolbar_padding</item>
        <item name="navigationIcon">@drawable/return_dark_mode</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">@dimen/main_fontSize</item>
    </style>

    <style name="SettingsPageSwitcher">
        <item name="thumbTint">@color/pm_blue</item>
        <item name="trackTint">@color/light_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_fontSize</item>
        <item name="android:paddingHorizontal">@dimen/upHorizontal_padding</item>
        <item name="android:paddingBottom">@dimen/toolbar_padding</item>
    </style>

    <style name="SettingsPageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/settingsVertical_padding</item>
        <item name="android:paddingHorizontal">@dimen/upHorizontal_padding</item>
        <item name="android:paddingEnd">@dimen/end_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_fontSize</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SearchPageToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/upHorizontal_padding</item>
        <item name="navigationIcon">@drawable/return_dark_mode</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">@dimen/main_fontSize</item>
    </style>

    <style name="SearchFrameTextEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginHorizontal">@dimen/upHorizontal_padding</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SearchPageTextEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/search_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColor">@color/pm_black</item>
        <item name="android:textColorHint">@color/pm_black</item>
        <item name="android:paddingHorizontal">@dimen/toolbar_padding</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:drawableStart">@drawable/search_page_dark</item>
        <item name="android:drawablePadding">@dimen/albumStub_margin</item>
        <item name="android:layout_marginVertical">@dimen/search_margin_vertical</item>
        <item name="android:background">@drawable/rounded_textedit_dark</item>
    </style>

    <style name="CloseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingEnd">@dimen/albumStub_margin</item>
        <item name="android:layout_marginVertical">@dimen/search_margin_vertical</item>
        <item name="icon">@drawable/x_button</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/pm_black</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TrackInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/trackInfo_fontSize</item>
    </style>

    <style name="TrackName">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:layout_marginTop">@dimen/end_padding</item>
        <item name="android:layout_marginBottom">28dp</item>
        <item name="android:layout_marginStart">@dimen/track_marginEnd</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/regular_fontSize</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DividingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/dividing_point_dark</item>
    </style>

    <style name="TrackForward">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/toolbar_padding</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/forward_dark_mode</item>
    </style>

    <style name="SplashscreenErrorIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:src">@drawable/not_found_dark</item>
    </style>

    <style name="SplashscreenNetworkErrorIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:src">@drawable/server_error_dark</item>
    </style>

    <style name="SplashscreenNetworkErrorText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">238dp</item>
        <item name="android:layout_marginHorizontal">@dimen/end_padding</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SplashscreenNetworkErrorButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">350dp</item>
        <item name="android:paddingVertical">@dimen/search_margin_vertical</item>
        <item name="android:paddingHorizontal">@dimen/end_padding</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textColor">@color/pm_black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="HistoryView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/error_textSize</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PlaylistMain">
        <item name="android:background">@color/pm_blue</item>
    </style>

    <style name="PlaylistToolbar">
        <item name="navigationIcon">@drawable/return_dark_mode</item>
    </style>

    <style name="PlaylistPlayBtn">
        <item name="android:src">@drawable/play_btn_dark</item>
    </style>

    <style name="PlaylistLikeBtn">
        <item name="android:src">@drawable/like_btn_dark</item>
    </style>

    <style name="PlaylistCollectBtn">
        <item name="android:src">@drawable/create_playlist_btn_dark</item>
    </style>

    <style name="PlaylistArtist">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/clear_history</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlaylistTrack">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/main_fontSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlaylistDetailValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="PlaylistDetailKey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

</resources>